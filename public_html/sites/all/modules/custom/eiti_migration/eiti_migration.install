<?php

/**
 * Implements hook_install().
 */
function eiti_migration_install() {
  $msg = 'Please <a href="!url">configure the Legacy System settings</a> on this machine before you run or register your migrations.';
  $args = array(
    '!url' => url('admin/content/migrate/configure-legacy'),
  );
  drupal_set_message(t($msg, $args));
}
